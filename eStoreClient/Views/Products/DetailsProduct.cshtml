@model Repositories.Entities.Product
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860

@{
    ViewData["Title"] = "Product Details";
}

<h1>Product Details</h1>

@if (ViewBag.ErrMsg != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrMsg
    </div>
}
<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Product Information</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">Product Name:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.ProductName)</dd>

                    <dt class="col-sm-4">Weight:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Weight)</dd>

                    <dt class="col-sm-4">Unit Price:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.UnitPrice)</dd>

                    <dt class="col-sm-4">Units In Stock:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.UnitsInStock)</dd>

                    @*<dt class="col-sm-4">Category:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Category.CategoryName)</dd>*@
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="EditProduct" asp-route-id="@Model?.ProductId" class="btn btn-primary">Edit</a>
    <a asp-action="ViewProduct" class="btn btn-secondary">Back to List</a>
</div>

