@model Repositories.Entities.Member
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860

@{
    ViewData["Title"] = "Delete Member";
}

<h1>Delete Member</h1>

@if (ViewBag.ErrMsg != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrMsg
    </div>
}

<div>
    <h4>Product Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">MemberId:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.MemberId)</dd>

        <dt class="col-sm-2">Email:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>

        <dt class="col-sm-2">CompanyName:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.CompanyName)</dd>

        <dt class="col-sm-2">City:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.City)</dd>

        <dt class="col-sm-2">Country:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Country)</dd>

        @*<dt class="col-sm-2">Category:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Category.CategoryName)</dd>*@
    </dl>

    <form asp-action="DeleteMember">
        <input type="hidden" asp-for="MemberId" />
        <div class="mt-3">
            <p class="text-danger">Are you sure you want to delete this member?</p>
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="ViewMember" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

