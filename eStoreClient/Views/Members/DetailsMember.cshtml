@model Repositories.Entities.Member
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860

@{
    ViewData["Title"] = "Member Details";
}

<h1>Member Details</h1>

@if (ViewBag.ErrMsg != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrMsg
    </div>
}
<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Member Information</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">MemberId:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.MemberId)</dd>

                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                    <dt class="col-sm-4">CompanyName:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.CompanyName)</dd>

                    <dt class="col-sm-4">City:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.City)</dd>

                    <dt class="col-sm-4">Country:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Country)</dd>
                    
                    
                    @*<dt class="col-sm-4">Category:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Category.CategoryName)</dd>*@
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    
    <a asp-action="ViewMember" class="btn btn-secondary">Back to List</a>
</div>